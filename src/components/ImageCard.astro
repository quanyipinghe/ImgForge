---
interface Props {
  id: string;
  filename: string;
  url: string;
  size_bytes: number;
  width: number | null;
  height: number | null;
  uploaded_at: string;
}

const { id, filename, url, size_bytes, width, height, uploaded_at } = Astro.props;
const sizeKB = (size_bytes / 1024).toFixed(0);
const date = new Date(uploaded_at).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric', hour: '2-digit', minute: '2-digit', second: '2-digit' });
const remoteFilename = url.split('/').pop() || '';
const mdLink = `![${filename}](${url})`;
const htmlLink = `<img src="${url}" alt="${filename}">`;
---
<article class="card" data-id={id}>
  <div class="thumb-wrap">
    <a href={url} target="_blank" rel="noopener">
      <img src={url} alt={filename} loading="lazy" />
    </a>
  </div>
  <div class="meta">
    <div class="filename" title={`Original: ${filename}\nRemote: ${remoteFilename}`}>{filename} <span class="remote-name" title="Remote/Unique filename">({remoteFilename})</span></div>
    <div class="info">
      {width && height ? `${width}×${height} · ` : ''}{sizeKB} KB
    </div>
    <div class="info time">
      {date}
    </div>
  </div>
  <div class="actions">
    <button class="copy-btn" data-value={url}>Direct</button>
    <button class="copy-btn" data-value={mdLink}>MD</button>
    <button class="copy-btn" data-value={htmlLink}>HTML</button>
    <button class="delete-btn" data-id={id} title="Delete image">✕</button>
  </div>
</article>

<style>
  .card {
    background: var(--bg-card);
    border: 1px solid var(--border-color);
    border-radius: 10px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    transition: border-color 0.2s;
  }
  .card:hover { border-color: var(--border-hover); }
  .thumb-wrap {
    aspect-ratio: 16/9;
    overflow: hidden;
    background: var(--bg-main);
  }
  .thumb-wrap img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s;
  }
  .thumb-wrap:hover img { transform: scale(1.04); }
  .meta {
    padding: 0.65rem 0.75rem 0.4rem;
    flex: 1;
  }
  .filename {
    font-size: 0.85rem;
    font-weight: 600;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    color: var(--text-main);
  }
  .remote-name {
    font-size: 0.7rem;
    color: var(--text-muted);
    font-weight: normal;
  }
  .info { font-size: 0.75rem; color: var(--text-muted); margin-top: 0.2rem; }
  .info.time { color: var(--text-muted); margin-top: 0.1rem; }
  .actions {
    display: flex;
    gap: 0.4rem;
    padding: 0.5rem 0.75rem 0.65rem;
    align-items: center;
  }
  .copy-btn {
    flex: 1;
    padding: 0.3rem 0;
    background: var(--bg-btn-secondary);
    border: 1px solid var(--border-color);
    border-radius: 5px;
    color: var(--text-muted);
    font-size: 0.75rem;
    cursor: pointer;
    transition: background 0.15s, color 0.15s;
  }
  .copy-btn:hover { background: var(--bg-btn-secondary-hover); color: var(--text-main); }
  .copy-btn.copied { background: rgba(16, 185, 129, 0.1); color: var(--success-color); border-color: rgba(16, 185, 129, 0.2); }
  .delete-btn {
    padding: 0.3rem 0.5rem;
    background: transparent;
    border: 1px solid var(--border-color);
    border-radius: 5px;
    color: var(--text-muted);
    font-size: 0.85rem;
    cursor: pointer;
    transition: background 0.15s, color 0.15s, border-color 0.15s;
  }
  .delete-btn:hover { background: rgba(239, 68, 68, 0.1); color: var(--danger-color); border-color: rgba(239, 68, 68, 0.2); }

</style>
