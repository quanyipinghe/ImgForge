---
interface Props {
  id: string;
  filename: string;
  url: string;
  size_bytes: number;
  width: number | null;
  height: number | null;
  uploaded_at: string;
}

const { id, filename, url, size_bytes, width, height, uploaded_at } = Astro.props;
const sizeKB = (size_bytes / 1024).toFixed(0);
const date = new Date(uploaded_at).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
const mdLink = `![${filename}](${url})`;
const htmlLink = `<img src="${url}" alt="${filename}">`;
---
<article class="card" data-id={id}>
  <div class="thumb-wrap">
    <a href={url} target="_blank" rel="noopener">
      <img src={url} alt={filename} loading="lazy" />
    </a>
  </div>
  <div class="meta">
    <div class="filename" title={filename}>{filename}</div>
    <div class="info">
      {width && height ? `${width}×${height} · ` : ''}{sizeKB} KB · {date}
    </div>
  </div>
  <div class="actions">
    <button class="copy-btn" data-value={url}>Direct</button>
    <button class="copy-btn" data-value={mdLink}>MD</button>
    <button class="copy-btn" data-value={htmlLink}>HTML</button>
    <button class="delete-btn" data-id={id} title="Delete image">✕</button>
  </div>
</article>

<style>
  .card {
    background: #1a1a1a;
    border: 1px solid #2a2a2a;
    border-radius: 10px;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    transition: border-color 0.2s;
  }
  .card:hover { border-color: #444; }
  .thumb-wrap {
    aspect-ratio: 16/9;
    overflow: hidden;
    background: #111;
  }
  .thumb-wrap img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s;
  }
  .thumb-wrap:hover img { transform: scale(1.04); }
  .meta {
    padding: 0.65rem 0.75rem 0.4rem;
    flex: 1;
  }
  .filename {
    font-size: 0.85rem;
    font-weight: 600;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    color: #e0e0e0;
  }
  .info { font-size: 0.75rem; color: #666; margin-top: 0.2rem; }
  .actions {
    display: flex;
    gap: 0.4rem;
    padding: 0.5rem 0.75rem 0.65rem;
    align-items: center;
  }
  .copy-btn {
    flex: 1;
    padding: 0.3rem 0;
    background: #252525;
    border: 1px solid #333;
    border-radius: 5px;
    color: #aaa;
    font-size: 0.75rem;
    cursor: pointer;
    transition: background 0.15s, color 0.15s;
  }
  .copy-btn:hover { background: #333; color: #fff; }
  .copy-btn.copied { background: #1e3a2f; color: #4ade80; border-color: #4ade80; }
  .delete-btn {
    padding: 0.3rem 0.5rem;
    background: transparent;
    border: 1px solid #333;
    border-radius: 5px;
    color: #666;
    font-size: 0.85rem;
    cursor: pointer;
    transition: background 0.15s, color 0.15s, border-color 0.15s;
  }
  .delete-btn:hover { background: #3a1a1a; color: #f87171; border-color: #f87171; }
</style>
